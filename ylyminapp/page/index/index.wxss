@import "../common/lib/weui.wxss";

button{
  margin-bottom: 30rpx;
}
button:last-child{
  margin-bottom: 0;
}
.page-section-title{
  padding: 0;
}
.swiper{
  padding: 0;
}
swiper{
  width: 100%;  
  height: 400rpx;
}
.swiper-item{
  display: block;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  height: 400rpx;
}
.page-section-title{
  margin-top: 60rpx;
  position: relative;
}
.info{
  position: absolute;
  right: 0;
  color: #353535;
  font-size: 30rpx;
}

.page-section{
  margin-bottom: 0;
}

.classify{
  display: flex;
  width: 100%;
  background-color: #fff;
}
.classify .item{
  flex: 1;
  text-align: center;
  padding: 40rpx 0;
}
.classify .item text{
  color: #999;
  font-size: 26rpx;
}
.classify .item image{
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 0 auto;
}

.section{
  margin-top: 20rpx;
  background-color: #fff;
}
.section-title{
  padding: 20rpx 30rpx;
  color: #1296db;
  font-weight: bold;
  font-size: 36rpx;
}
.environment .content{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.environment .content .item{
  width: 31%;
  padding-bottom: 31%;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  background-color: #999;
  margin-bottom: 20rpx;
}
.teacher .content{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx 10rpx 30rpx;
}
.teacher .content .item{
  display: flex;
  margin-bottom: 20rpx;
}
.teacher .content .item image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.teacher .content .item .teacher-info{
  flex: 1;
}

.teacher-info .intro{
  font-size: 24rpx;
  color: #999;
}

.teacher-info .post{
  display: inline-block;
  padding: 0rpx 10rpx;
  border: 1px solid #1296db;
  color: #1296db;
  border-radius: 26rpx;
  font-size: 20rpx;
}








.star .content{
  padding: 0 30rpx 20rpx 30rpx;
}

.scroll-view_H{
  white-space: nowrap;
}
.scroll-view-item{
  height: 300rpx;
}
.scroll-view-item_H{
  display: inline-block;
  box-sizing: border-box;
  padding: 20rpx;
  width: 40%;
  height: 300rpx;
  background: #f5f5f5;
  margin-right: 20rpx;
  border-radius: 10rpx;
  text-align: center;
}
.scroll-view-item_H .headimg{
  height: 120rpx;
  width: 120rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  border-radius: 50%;
  display: block;
  margin: 0 auto;
}
.scroll-view-item_H .name{
  font-size: 30rpx;
  font-weight: bold;
}
.scroll-view-item_H .money{
  color: #1296db;
  font-size: 26rpx;
}
.scroll-view-item_H .company{
  color: #666;
  font-size: 26rpx;
}
