.course-item{
  position: relative;
  width: 100%;
  margin-bottom: 20rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}
.course-item:last-child{
  margin-bottom: 0;
}

.course-item image{
  width: 100%;
  height: 260rpx;
  display: block;
}

.course-item .btn{
  position: absolute;
  bottom: 40rpx;
  width: 70%;
  left: 0;
  right: 0;
  margin: 0 auto;
  height: 60rpx;
  display: flex;
}
.course-item .btn navigator{
  flex: 1;
  margin: 0 6%;
  text-align: center;
  line-height: 60rpx;
  border-radius: 60rpx;
  border: 1px solid #fff;
  color: #fff;
  font-size: 30rpx;
}

.course-item .btn navigator button{
  font-size: 30rpx;
  height: 56rpx;
  line-height: 60rpx;
  margin: 0;
  color: #fff;
  background-color: rgba(255,0,0,0);
}